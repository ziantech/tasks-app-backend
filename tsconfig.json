{
  "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "rootDir": "./src",
      "outDir": "./build",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
  },
  "include": [
      "src/**/*",
      "src/types/**/*" 
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
